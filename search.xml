<?xml version="1.0" encoding="UTF-8"?>
<!-- thread-count 定义同时启动的浏览器数 、parallel="tests" 表明每个test都是平级的 -->
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SEARCH" parallel="tests" thread-count="2">
    <!-- chrome,firefox,ghost和ie不区分大小写 -->
    <parameter name="browserName" value="chrome" />
    <!-- driver的属性配置文件保存路径 -->
    <parameter name="driverConfgFilePath" value="config/driver.properties" />
    <!-- 定义测试的站点 -->
    <parameter name="testurl" value="https://www.baidu.com" />
    <!-- 进程等待1秒中的控制时间 -->
    <parameter name="sleepTime" value="800" />
    <!-- 页面元素10秒不出现超时时间 -->
    <parameter name="timeOut" value="60" />
    <!-- 这个是等待alert弹出的时间 单位毫秒 -->
    <parameter name="waitMillisecondsForAlert" value="40000" />



    <!-- 定义测试模块，用test标签包围 -->

    <test name="Search" preserve-order="true">
        <packages>
            <package name="com.demo.test.testcases.search" />
        </packages>
    </test>
    <!--<test name="Login" preserve-order="true">-->
        <!--<packages>-->
            <!--<package name="com.demo.test.testcases.testcookie" />-->
        <!--</packages>-->
    <!--</test>-->
    <!--<test name="Home" preserve-order="true">-->
        <!--<packages>-->
            <!--<package name="com.demo.test.testcases.home" />-->
        <!--</packages>-->
    <!--</test>-->
    <listeners>
        <!-- arrow插件实现用例失败重跑以及生成测试报告 -->
        <listener class-name="com.demo.test.plugins.arrow.TestResultListener" />
        <listener class-name="com.demo.test.plugins.arrow.RetryListener" />
        <!--<listener class-name="com.demo.test.plugins.arrow.PowerEmailableReporter" />-->
        <listener class-name="com.demo.test.plugins.arrow.ExtentTestNGIReporterListener" />
    </listeners>

</suite>